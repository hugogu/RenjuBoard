<Window x:Class="RenjuBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:RenjuBoard.Controls"
        xmlns:local="clr-namespace:RenjuBoard"
        xmlns:vm="clr-namespace:RenjuBoard.ViewModels"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        Title="Renju Board"
        Height="500" Width="950">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Padding" Value="5,1" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>
        <DockPanel Margin="5"
                   LastChildFill="False">
            <Button Content="New Game"
                    DockPanel.Dock="Top"
                    Click="OnNewGameButtonClick" />
            <Button Content="Undo"
                    DockPanel.Dock="Top"
                    Command="{Binding UndoCommand}" />
            <Button Content="Redo"
                    DockPanel.Dock="Top"
                    Command="{Binding RedoCommand}" />
        </DockPanel>
        <control:GameBoardPanel Grid.Column="1"
                                ItemsSource="{Binding Points}"
                                Size="{Binding BoardSize}">
        </control:GameBoardPanel>
        <GridSplitter Grid.Column="2"
                      Width="5"
                      HorizontalAlignment="Stretch" />
        <ContentControl Grid.Column="3">
            <vm:LogsViewModel />
        </ContentControl>
    </Grid>
</Window>
